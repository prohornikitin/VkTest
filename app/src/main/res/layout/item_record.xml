<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:padding="8dp"
    android:background="@drawable/ic_rounded_rectangle"
    android:backgroundTint="@color/background_group"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/play_stop_button"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Title placeholder"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/creation_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="datetime placeholder"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/play_stop_button"
        android:textStyle="normal"
        android:textColor="@color/gray"/>

    <com.example.vktest.views.ToggleImageButton
        android:id="@+id/play_stop_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/play_pause_button"
        app:tint="@color/white"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/primary"
        />


</androidx.constraintlayout.widget.ConstraintLayout>